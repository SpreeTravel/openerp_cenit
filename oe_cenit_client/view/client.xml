<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

	<menuitem id="integration" sequence="5" parent="base.menu_administration" name="Integration" />
	
	<!-- Group -->
	
	<record id="cenit_client_view_tree" model="ir.ui.view">
        <field name="name">cenit.client.view.tree</field>
        <field name="model">cenit.client</field>
        <field name="arch" type="xml">
            <tree string="Clients" >
            	<field name="name"/>
				<field name="url"/>
                <field name="key"/>
				<field name="token"/>
				<button name="push" type="object" string="Push" icon="gtk-go-forward"/>
            </tree>
        </field>
    </record>
	
	<record id="cenit_client_view_form" model="ir.ui.view">
        <field name="name">cenit.client.view.form</field>
        <field name="model">cenit.client</field>
        <field name="arch" type="xml">
            <form string="Client" version="7.0">
            	<sheet>
					<group>
						<group>
							<field name="name"/>
							<field name="url"/>
						</group>
						<group>
							<field name="key"/>
							<field name="token"/>
						</group>
					</group>
					<notebook>
						<page string="Push Objects">
							<field name="push_object_ids" nolabel="1" >
								<tree string="Push objects" editable="bottom">
									<field name="root" />
									<field name="model_id" />
									<field name="push_type" />
									<field name="push_method" />
									<button name="push_all" type="object" string="Push" icon="gtk-go-forward"/>
								</tree>
							</field>
						</page>
						<page string="Pull Objects">
							<field name="pull_object_ids" nolabel="1" >
								<tree string="Pull objects" editable="bottom">
									<field name="root" />
									<field name="model_id" />
									<button name="create_configuration_in_cenit" type="object" string="Create in Cenit" icon="terp-stock_effects-object-colorize"/>
								</tree>
							</field>
						</page>
					</notebook>
				</sheet>
            </form>
        </field>
    </record>
    
    <record id="cenit_client_action" model="ir.actions.act_window">
        <field name="name">Clients</field>
        <field name="res_model">cenit.client</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="cenit_client_view_tree"/>
    </record>
	
	<menuitem id="cenit_client_menu" sequence="1" parent="integration" action="cenit_client_action"/>

  </data>
</openerp>
