<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data >

		<!-- Sale Order -->
        
        <record id="data_type_res_partner" model="cenit.data.type">
            <field name="name">res_partner</field>
			<field name="model_id" model="ir.model" search="[('model', '=', 'res.partner')]" />
        </record>
		
		<record id="data_type_res_partner_name" model="cenit.data.type.line">
            <field name="name">name</field>
			<field name="line_type">field</field>
			<field name="value">id</field>
			<field name="primary" eval="True"/>
			<field name="data_type_id" ref="data_type_sale_order"/>
        </record>
		
		<record id="data_type_sale_order_state" model="cenit.data.type.line">
            <field name="name">state</field>
			<field name="line_type">field</field>
			<field name="value">status</field>
			<field name="data_type_id" ref="data_type_sale_order"/>
        </record>
		
		<record id="data_type_sale_order_currency" model="cenit.data.type.line">
            <field name="name">currency_id</field>
			<field name="line_type">reference</field>
			<field name="value">currency</field>
			<field name="reference_id" ref="oe_cenit_product.data_type_currency" />
			<field name="data_type_id" ref="data_type_sale_order"/>
        </record>
		
		<record id="data_type_sale_order_date_confirm" model="cenit.data.type.line">
            <field name="name">date_confirm</field>
			<field name="line_type">field</field>
			<field name="value">placed_on</field>
			<field name="data_type_id" ref="data_type_sale_order"/>
        </record>
		
		<record id="data_type_sale_order_date_totals" model="cenit.data.type.line">
            <field name="name">totals</field>
			<field name="line_type">field</field>
			<field name="value">totals</field>
			<field name="data_type_id" ref="data_type_sale_order"/>
        </record>
		   
    </data>
</openerp>
