<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
	
	<record id="wombat_data_type_view_tree" model="ir.ui.view">
        <field name="name">wombat.data.type.view.tree</field>
        <field name="model">wombat.data.type</field>
        <field name="arch" type="xml">
            <tree string="data_types" >
            	<field name="name"/>
                <field name="model_id"/>
            </tree>
        </field>
    </record>
	
	<record id="wombat_data_type_view_form" model="ir.ui.view">
        <field name="name">wombat.data.type.view.form</field>
        <field name="model">wombat.data.type</field>
        <field name="arch" type="xml">
            <form string="Data Type" version="7.0">
            	<sheet>
            		<group>
						<field name="name"/>
						<field name="model_id"/>
					</group>
					<notebook>
						<page string="Lines">
							<field name="line_ids" nolabel="1" >
								<tree string="Lines" editable="bottom">
									<field name="name" />
									<field name="value" />
									<field name="line_type" />
									<field name="reference_id" />
									<field name="line_cardinality" />
									<field name="primary" />
								</tree>
							</field>
						</page>
					</notebook>
				</sheet>
            </form>
        </field>
    </record>
    
    <record id="wombat_data_type_action" model="ir.actions.act_window">
        <field name="name">Data Types</field>
        <field name="res_model">wombat.data.type</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="wombat_data_type_view_tree"/>
    </record>
	
	<menuitem id="wombat_data_type_menu" sequence="2" parent="integration" action="wombat_data_type_action"/>

  </data>
</openerp>
