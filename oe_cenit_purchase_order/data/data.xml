<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
    	
		<!-- Purchase Order -->
        
        <record id="data_type_purchase_order" model="cenit.data.type">
            <field name="name">purchase</field>
			<field name="model_id" model="ir.model" search="[('model', '=', 'purchase.order')]" />
        </record>
		
		<record id="data_type_purchase_order_name" model="cenit.data.type.line">
            <field name="name">name</field>
			<field name="line_type">field</field>
			<field name="value">id</field>
			<field name="primary" eval="True"/>
			<field name="data_type_id" ref="data_type_purchase_order"/>
        </record>
		
		<record id="data_type_purchase_order_state" model="cenit.data.type.line">
            <field name="name">state</field>
			<field name="line_type">field</field>
			<field name="value">status</field>
			<field name="data_type_id" ref="data_type_purchase_order"/>
        </record>
		
		<record id="data_type_purchase_order_currency" model="cenit.data.type.line">
            <field name="name">currency_id</field>
			<field name="line_type">reference</field>
			<field name="value">currency</field>
			<field name="reference_id" ref="oe_cenit_product.data_type_currency" />
			<field name="data_type_id" ref="data_type_purchase_order"/>
        </record>
		
		<record id="data_type_purchase_order_date_order" model="cenit.data.type.line">
            <field name="name">date_order</field>
			<field name="line_type">field</field>
			<field name="value">placed_on</field>
			<field name="data_type_id" ref="data_type_purchase_order"/>
        </record>
		
		<record id="data_type_purchase_order_partner" model="cenit.data.type.line">
            <field name="name">partner_id</field>
			<field name="line_type">model</field>
			<field name="value">billing_address</field>
			<field name="line_cardinality">2one</field>
			<field name="reference_id" ref="oe_cenit_partner.data_type_res_partner" />
			<field name="data_type_id" ref="data_type_purchase_order"/>
        </record>
		
		<record id="data_type_purchase_order_customer" model="cenit.data.type.line">
            <field name="name">customer_id</field>
			<field name="line_type">model</field>
			<field name="value">customer_address</field>
			<field name="line_cardinality">2one</field>
			<field name="reference_id" ref="oe_cenit_partner.data_type_res_partner" />
			<field name="data_type_id" ref="data_type_purchase_order"/>
        </record>
		
		<!-- Purchase Order Line -->
        
        <record id="data_type_purchase_order_line" model="cenit.data.type">
            <field name="name">purchase_order_line</field>
			<field name="model_id" model="ir.model" search="[('model', '=', 'purchase.order.line')]" />
        </record>
		
		<record id="data_type_purchase_order_line_name" model="cenit.data.type.line">
            <field name="name">name</field>
			<field name="line_type">field</field>
			<field name="value">name</field>
			<field name="primary" eval="True"/>
			<field name="data_type_id" ref="data_type_purchase_order_line"/>
        </record>
		
		<record id="data_type_purchase_order_line_product_id" model="cenit.data.type.line">
            <field name="name">product_id</field>
			<field name="line_type">reference</field>
			<field name="value">product_id</field>
			<field name="reference_id" ref="oe_cenit_product.data_type_product" />			
			<field name="data_type_id" ref="data_type_purchase_order_line"/>
        </record>
		
		<record id="data_type_purchase_order_line_quantity" model="cenit.data.type.line">
            <field name="name">product_qty</field>
			<field name="line_type">field</field>
			<field name="value">quantity</field>			
			<field name="data_type_id" ref="data_type_purchase_order_line"/>
        </record>
		
		<record id="data_type_purchase_order_line_price_unit" model="cenit.data.type.line">
            <field name="name">price_unit</field>
			<field name="line_type">field</field>
			<field name="value">price</field>			
			<field name="data_type_id" ref="data_type_purchase_order_line"/>
        </record>
		
		<!-- ... -->
		
		<record id="data_type_purchase_order_order_line" model="cenit.data.type.line">
            <field name="name">order_line</field>
			<field name="line_type">model</field>
			<field name="value">line_items</field>
			<field name="line_cardinality">2many</field>
			<field name="reference_id" ref="data_type_purchase_order_line" />
			<field name="data_type_id" ref="data_type_purchase_order"/>
        </record>
		   
    </data>
</openerp>
